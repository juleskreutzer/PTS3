<?xml version="1.0" encoding="UTF-8"?>
<project name="module_pts3" default="compile.module.pts3">
  <dirname property="module.pts3.basedir" file="${ant.file.module_pts3}"/>
  
  <property name="module.jdk.home.pts3" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.pts3" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.pts3" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.pts3" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="pts3.output.dir" value="${module.pts3.basedir}/out/production/PTS3"/>
  <property name="pts3.testoutput.dir" value="${module.pts3.basedir}/out/test/PTS3"/>
  
  <path id="pts3.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="pts3.module.production.classpath">
    <path refid="${module.jdk.classpath.pts3}"/>
  </path>
  
  <path id="pts3.runtime.production.module.classpath">
    <pathelement location="${pts3.output.dir}"/>
  </path>
  
  <path id="pts3.module.classpath">
    <path refid="${module.jdk.classpath.pts3}"/>
    <pathelement location="${pts3.output.dir}"/>
  </path>
  
  <path id="pts3.runtime.module.classpath">
    <pathelement location="${pts3.testoutput.dir}"/>
    <pathelement location="${pts3.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.pts3">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.pts3">
    <patternset refid="excluded.from.module.pts3"/>
  </patternset>
  
  <path id="pts3.module.sourcepath">
    <dirset dir="${module.pts3.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.pts3" depends="compile.module.pts3.production,compile.module.pts3.tests" description="Compile module PTS3"/>
  
  <target name="compile.module.pts3.production" depends="register.custom.compilers" description="Compile module PTS3; production classes">
    <mkdir dir="${pts3.output.dir}"/>
    <javac2 destdir="${pts3.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.pts3}/javac">
      <compilerarg line="${compiler.args.pts3}"/>
      <bootclasspath refid="pts3.module.bootclasspath"/>
      <classpath refid="pts3.module.production.classpath"/>
      <src refid="pts3.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.pts3"/>
    </javac2>
    
    <copy todir="${pts3.output.dir}">
      <fileset dir="${module.pts3.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.pts3.tests" depends="register.custom.compilers,compile.module.pts3.production" description="compile module PTS3; test classes" unless="skip.tests"/>
  
  <target name="clean.module.pts3" description="cleanup module">
    <delete dir="${pts3.output.dir}"/>
    <delete dir="${pts3.testoutput.dir}"/>
  </target>
</project>